<% if params[:controller]=='shahids' %>
<li id="comment-<%= comment.id %>">

  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user.admin? %>
      <%= link_to "حذف نظر", comment, method: :delete,
                                       data: { confirm: "مطمئنید که می خواهید این نظر را حذف کنید?" } %>
     <% end %>

  </span>
</li>
     <% end %>
<% else if params[:controller]=='users' %>

<li id="comment-<%= comment.id %>">

  <span class="shahid"><%= link_to comment.shahid.pname, comment.shahid %></span>
  <br>
  <font color="magenta">
  <span class="content"><%= comment.content %></span>
  </font>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) %>
      <%= link_to "حذف نظر", comment, method: :delete,
                                       data: { confirm: "مطمئنید که می خواهید این نظر را حذف کنید?" } %>
     <% end %>

  </span>
</li>
     <% end %>     
