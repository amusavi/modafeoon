<% provide(:title, "تغییر اطلاعات کاربری") %>
<h1>تغییر اطلاعات کاربری</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :نام %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :رایانامه %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password , "کلمه عبور"%>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "تایید کلمه عبور" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "ذخیره تغییرات", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target=_blank>تغییر آواتار کاربری</a>
    </div>
  </div>
</div>
